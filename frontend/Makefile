# ğŸ§¹ Remove frontend container and volume
clean:
	docker compose down --volumes --remove-orphans
	docker image prune -a -f
	rm -rf node_modules

# ğŸš§ Build and start frontend
dev:
	docker compose build
	docker compose up -d

# ğŸš Shell access
shell:
	docker exec -it frontend-app sh

# ğŸ“Š Status
status:
	docker compose ps
